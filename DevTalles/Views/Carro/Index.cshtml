@using DevTalles.Data;


@model IEnumerable<Curso>

@if (Model.Count() > 0)
{
    <form method="post">
        <br />
        <div class="backgroundWhiteBorder">
            <div class="container row">
                <div class="col -8">
                    <div class="card mt-4">
                        <div class="card-header bg-dark text-light ml-0 row container">
                            <div class="col-6">
                                <i class="fa fa-shopping-cart"></i> &nbsp;
                                Carro de Compras
                            </div>
                            <div class="col-6 text-end">

                                <a asp-action="Index" asp-controller="Home" class="btn btn-outline-info btn-sm">Continuar Comprando</a>
                            </div>

                        </div>
                        <div class="card-body">
                            <div class=" d-none d-lg-block">
                                <div class="row " style="color:#821f3d">
                                    <div class="col-lg-2">
                                    </div>


                                    <div class="col-12 col-lg-6">
                                        Detalle de producto
                                    </div>


                                    <div class="col-12 col-lg-2">
                                        Precio de producto
                                    </div>
                                



                                    <div class="col-6 col-sm-4 col-lg-1">
                                    </div>
                                </div>
                            </div>
                   
                            @{
                                var total = 0.0;
                            }
                        <hr />
                        @foreach (var item in Model)
                        {

                                

                                

                            <div class="row my-2 h-100">
                                <div class="col-4 col-md-2 text-center py-2">
                                    <img src="@WC.RutaImagen@item.ImagenUrl" class="rounded" width="90%" />
                                </div>
                                <div class="col-8 col-lg-6">
                                    <h5>@item.NombreProducto</h5>
                                    <div style="font-size:17px;">@item.DescripcionCorta</div>
                                </div>




                                <div class="col-3 col-lg-2 pt-lg-4 m-0" style="font-size:11px;">
                                    <span style="font-size:27px;"> $@item.Precio</span>

                                </div>
                                
                        


                                <div class="col-2 col-lg-1 p-0 pt-lg-4 text-center my-2">
                                    <a asp-action="Eliminar" asp-route-Id="@item.Id" class="btn btn-outline-danger">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                                
                                
                            </div>
                                total = total + item.Precio;
                            }

                            <div class="col-12 text-end pr-4" style="color:#821f3d">
                                Total Orden: @string.Format("{0:c}", total)
                            </div>
                            
                            
                            <hr />
                            <div/>
                                

                     
                        <div class="card-footer">
                            <div class="row">

                                <div class="col-6 col-md-3 offset-md-9">
                                    <a asp-action="Resumen" class="btn btn-success form-control ">
                                        <span>Continuar</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </form>
}
else
{
    <p>Por favor agregar Productos al Carro</p>
}
