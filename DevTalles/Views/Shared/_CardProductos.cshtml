@using DevTalles.Data;
@model Curso


<!-- Card-->


<li class="curso  m-2 filter @Model.Categoria.NombreCategoria.Replace(' ','_')" style="position:relative" >
 
        <img class="card-img-top w-100"
             src="@WC.RutaImagen@Model.ImagenUrl"
             alt="imagen curso" style="max-height:140px; overflow:hidden" 
             />



        <div class="card-body d-flex flex-column  " style="max-height:230px">
            <label class="titulo fw-bold" style="max-height:80px; overflow:hidden">@Model.NombreProducto</label>

            <div class="flex-grow-1 mb-3">
                <p class=" m-0 fw-bold">@Model.Categoria.NombreCategoria</p>
                <p class="instructor">@Model.SubCategoria.Nombre</p>

                


                
            </div>


          
        </div>


    <a asp-action="Detalle" asp-route-Id="@Model.Id" class="btn btn-outline-dark " style="position:absolute; bottom:0">@Model.Precio USD$ <span style="text-decoration:line-through">200 USD$</span></a>
       
            
   
</li>









