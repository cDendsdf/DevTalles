
@model SubCategoria

@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="Eliminar">
    <input asp-for="SubCategoriaId" hidden />
    <div class="border p-3 ">

        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>

        <div class="form-group row">
            <h2 class="text-danger pl-3">Esta Seguro de Eliminar esta SubCategoria?</h2>
        </div> 
                 
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Nombre" class="form-label">Nombre</label>
                    <input asp-for="Nombre" disabled class="form-control"/>

                </div>
            </div>
            
            <br />
            <div class="d-grid gap-2 d-md-block">
                <button type="submit" class="btn btn-danger">Eliminar</button>
                <a  asp-action="Index" class="btn btn-success">Regresar</a>
            </div>

        </div>


    </div>   

</form>

@section Scripts {
    @{ <partial name="_ValidationScriptsPartial" /> }
}

